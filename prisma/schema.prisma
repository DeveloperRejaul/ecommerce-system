generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

/// all types
type address {
  street String
  city   String
  state  String
  zip    String
}

type image {
  name  String
  uri   String
}

enum Role {
  USER
  ADMIN
  MODERATOR
}


// user achema
model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String     @unique
  password  String?
  name      String?
  address   address?
  avatar    String?
  Product   Product[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Catagory  Catagory[]
  role      Role       @default(USER)
}

// product catagory schema
model Catagory {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  child     String[]
  Product   Product[]
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @db.ObjectId
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// product scehema
model Product {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @db.ObjectId
  catagory   Catagory @relation(fields: [catagoryId], references: [id])
  catagoryId String   @db.ObjectId
  name       String
  title      String?
  images     image[]
  price      Int
  discount   Int?
  size       String[]
  description String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
